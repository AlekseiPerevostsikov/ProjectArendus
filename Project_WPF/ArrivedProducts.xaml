<Window x:Class="Project_WPF.ArrivedProducts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_WPF"
        mc:Ignorable="d"
        Title="Arrived Products" Height="692" Width="1008" WindowStartupLocation="CenterScreen" Activated="FormActivated" Loaded="FormLoaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="532*"/>
            <ColumnDefinition Width="147*"/>
            <ColumnDefinition Width="134*"/>
            <ColumnDefinition Width="187*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="205*"/>
            <RowDefinition Height="456*"/>
        </Grid.RowDefinitions>
        <ListView SelectedIndex="0" x:Name="ArrivedProductlList" Margin="10,30.96,10,10" Grid.Row="1" Grid.ColumnSpan="3">

            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Width="70" Header="Code"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Addres}" Width="210" Header="Name"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Description}" Width="60" Header="Quantity"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Description}" Width="200" Header="Sub category"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Description}" Width="200" Header="Provider"/>
                </GridView>
            </ListView.View>

        </ListView>
        <Button x:Name="btnAddToTemp" Content="Add to temp" HorizontalAlignment="Left" Margin="55,4,0,0" VerticalAlignment="Top" Width="100" Grid.Row="1" Grid.Column="3"/>
        <Label Content="Temporary data" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="136" RenderTransformOrigin="-0.025,0.718" Grid.Row="1"/>
        <ListView SelectedIndex="0" x:Name="productlList" Margin="10,56,10,5" SelectionChanged="ProductSelectionChanged">

            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding KoodToode}" Width="70" Header="Code"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Nimi}" Width="210" Header="Name"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Alamkategooria.Nimi}" Width="200" Header="Sub category"/>
                </GridView>
            </ListView.View>

        </ListView>
        <Label x:Name="lbl" Content="Product" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" Width="244"/>
        <Label Content="Provider" HorizontalAlignment="Left" Margin="20,25,0,0" VerticalAlignment="Top" Width="58" Grid.Column="2"/>
        <TextBox x:Name="txtProductName" Height="23" Margin="0,25,10,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120"/>
        <Label Content="Search: " Margin="0,25,144,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="57"/>
        <ComboBox x:Name="cbProdyctQuntity" HorizontalAlignment="Left" Margin="9,56,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Label Content="Product quantity" HorizontalAlignment="Left" Margin="9,25,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Button x:Name="btnConfirm" Content="Confirm" HorizontalAlignment="Left" Margin="7,119,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1" Grid.Column="3"/>
        <Button x:Name="btnDeleteTempProduct" Content="Delete temp data" HorizontalAlignment="Left" Margin="7,186,0,0" VerticalAlignment="Top" Width="136" Grid.Row="1" Grid.Column="3"/>
        <Button x:Name="btnAddNewProduct" Content="New Product" HorizontalAlignment="Left" Margin="9,130,0,0" VerticalAlignment="Top" Width="88" Click="btnAddNewProduct_Click" Grid.Column="1"/>
        <ListView SelectedIndex="0" x:Name="providerlList" Margin="20,56,32,5" Grid.Column="2" Grid.ColumnSpan="2">

            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Nimi}" Width="210" Header="Provider Name"/>
                </GridView>
            </ListView.View>

        </ListView>
        <TextBox x:Name="txtProviderName" Height="23" Margin="0,25,32,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="3" HorizontalAlignment="Right" Width="86"/>
        <Label Content="Search: " Margin="0,25,123,0" VerticalAlignment="Top" RenderTransformOrigin="1.123,0.5" Grid.Column="3" HorizontalAlignment="Right" Width="57"/>

    </Grid>
</Window>
